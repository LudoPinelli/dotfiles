[module/gmail]
type = custom/script
exec = python3 ~/.config/polybar/gmail/launch.py --color '#F28FAD'
tail = true
click-left = xdg-open https://mail.google.com
format-foreground                   = #88F8BD96
format-background                   = ${colors.black0}
format-padding                      = 2

[module/xwindow]
type                                = internal/xwindow
label                               = " %title:0:80:...% "
label-foreground                   = #BDD9E0EE
label-background                    = ${colors.black0}
label-font                          = 1

[module/weather]
type = custom/script
exec = busctl --user -j get-property io.ntfd /weather openweathermap.strings RenderedTemplate | jq -r .data
interval = 60
label-font = 4
label-background = #66F5C2E7
label-foreground = ${colors.pink}
label-padding = 2

[module/time]
type                                = internal/date
interval                            = 5
time                                = %Hh%M
format-prefix                       = "  "
format-foreground                   = ${colors.black0}
format-background                   = ${colors.flamingo}
label                               = "  %time% "
label-font                          = 1
label-background                    =  #66F2CDCD
label-foreground                    = ${colors.flamingo}

[module/date]
type                                = custom/script
exec = date +"%a %d %B" &
tail = true
interval                            = 60
label                               = " %output%  "
label-font                          = 3
label-background                    =  #66F2CDCD
label-foreground                    = ${colors.flamingo}
format-padding                      = 0
click-left                          = korganizer

[settings]
screenchange-reload                 = true

[module/ewmh]
type                                = internal/xworkspaces
pin-workspaces                      = false
enable-click                        = true
enable-scroll                       = true
reverse-scroll                      = true

