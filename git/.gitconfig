[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  line-numbers = true
  navigate = true
  syntax-theme = Catppuccin-macchiato

[merge]
  conflictstyle = diff3

[diff]
  tool = nvimdiff
  colorMoved = default
[init]
	defaultBranch = main
